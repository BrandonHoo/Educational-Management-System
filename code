int main(int argc, char *argv[])
{

	char select;
	while (1)
	{
		cout << "====================================" << endl;
		cout << "欢迎来到北京理工大学教务管理系统" << endl;
		cout << "        1 学生信息管理          " << endl;
		cout << "        2 学生课程管理          " << endl;
		cout << "        3 学生成绩查询          " << endl;
		cout << "        4.退出管理系统          " << endl;
		cout << "====================================" << endl;
		cout << "     输入相应的序号进行操作：    " << endl;
		cin >> select;
		switch (select)
		{
		case '1':
			STU_MAG_SYS();
			break;
		case '2':
			STU_COURS_SYS();
			break;
		case '3':
			STU_QUERY_SYS();
			break;
		case '4':
			exit(0);
			break;


		}
	}
	return 0;
}


void STU_MAG_SYS()
{
	cout << "你很棒" << endl;

}
